<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.helpinghands.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home"
    />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.helpinghands.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map"
    />

    <fragment
        android:id="@+id/navigation_requests"
        android:name="com.example.helpinghands.ui.requests.RequestsFragment"
        android:label="@string/title_requests"
        tools:layout="@layout/fragment_requests"
    />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.helpinghands.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile"
    />
</navigation>